<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Add here beans related to the API context -->

	
	<!-- Services accessible via Context.getService() -->

    <bean id="providerManagementService"
        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.providermanagement.api.impl.ProviderManagementServiceImpl">
                <property name="dao">
                    <bean class="org.openmrs.module.providermanagement.api.db.hibernate.HibernateProviderManagementDAO">
                        <property name="sessionFactory">
                            <ref bean="dbSessionFactory" />
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>



    <bean id="providerSuggestionService"
            class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.providermanagement.api.impl.ProviderSuggestionServiceImpl">
                <property name="dao">
                    <bean class="org.openmrs.module.providermanagement.api.db.hibernate.HibernateProviderManagementDAO">
                        <property name="sessionFactory">
                            <ref bean="dbSessionFactory" />
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <!-- Service -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.providermanagement.api.ProviderManagementService</value>
                <ref bean="providerManagementService"/>
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.providermanagement.api.ProviderSuggestionService</value>
                <ref bean="providerSuggestionService"/>
            </list>
        </property>
    </bean>

</beans>
